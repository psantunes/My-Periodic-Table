              <% end %>
            </td>
          <% end %>
        <% end %>
      </tr>
      <tr>
        <%# percorro a lista de elementos, populando com os actinideos %>
        <% @elements["order"].each do |element| %>  
          <% if @elements[element]["category"] == "actinide" %>
            <td>
              <%= link_to table_path(id: element) do %>
                <section class="c<%= @elements[element]["number"] %>">
                  <%= @elements[element]["number"] %><br>
                  <h5><%= @elements[element]["symbol"] %></h5>
                  <%= @elements[element]["name"] %><br>
                  <%= @elements[element]["atomic_mass"].round(2) %>
                </section>
              <% end %>
            </td>
          <% end %>
        <% end %>
      </tr>
  </table>
